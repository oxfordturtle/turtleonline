class AskInput {
  void main () {
    // printon question to console
    printon('What is your name?  ');
    // read characters from keybuffer until ENTER key is pressed
    String name = readLine();
    // printon a greeting (on a new line)
    print('');
    printon('Hello, ' + name + ', ...  ');
    pause(500);
    print('How are you?');
  }
}
